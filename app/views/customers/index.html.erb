<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<% a = "Ruby"%>
<% b = "Rails"%>

<%= "texto #{a} on #{b} texto" %> 
<%# interpolação, ruby dentro do texto %>

<%#

  "<%=" exibe no HTML
  "<%" não exibe no HTML, somente backend do ruby   
  se tiver um - no final, é uma quebra de linha
  
%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Birthday</th>
      <th>Obg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= l(customer.birthday) %></td> <%# uso do Locale para data pt-BT %>
        <td><%= customer.obg %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

